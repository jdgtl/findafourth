# Production Environment Variables
# Copy this to .env on your production server

# REQUIRED: Generate a secure random string for JWT
# Example: openssl rand -hex 32
JWT_SECRET=your-secure-random-string-here

# REQUIRED: Pingram/NotificationAPI credentials
NOTIFICATIONAPI_CLIENT_ID=your-client-id
NOTIFICATIONAPI_CLIENT_SECRET=your-client-secret

# REQUIRED: Allowed frontend origins (comma-separated)
CORS_ORIGINS=https://findafourth.com,https://www.findafourth.com

# OPTIONAL: Firecrawl API Key for PTI scraping
FIRECRAWL_API_KEY=
